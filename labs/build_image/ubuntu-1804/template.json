{
  "variables": {
    "ssh_password": "user",
    "ssh_user": "user",
    "iso_path": "/home/behrad/Downloads/ISO/ubuntu-18.04.5-server-amd64.iso",
    "iso_hash": "md5:a3e1c494a02abf1249749fa4fd386438",
    "build": "200820"
  },
  "builders": [
    {
      "boot_command": [
        "<esc><wait>",
        "<esc><wait>",
        "<enter><wait>",
        "/install/vmlinuz<wait>",
        " initrd=/install/initrd.gz",
        " auto-install/enable=true",
        " debconf/priority=critical",
        " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg<wait>",
        " -- <wait>",
        "<enter><wait>"
      ],
      "boot_wait": "10s",
      "ssh_timeout":"30m",
      "http_directory": "http",
      "export_opts": [
        "--manifest",
        "--vsys",
        "0"
      ],
      "format": "ova",
      "guest_os_type": "Ubuntu_64",
      "iso_checksum": "{{user `iso_hash`}}",
      "iso_url": "{{user `iso_path`}}",
      "shutdown_command": "echo 'packer' | sudo -S shutdown -P now",
      "guest_additions_url": "/usr/share/virtualbox/VBoxGuestAdditions.iso",
      "guest_additions_sha256": "78fa2ba78e91c7d6f16f8c7fa88676cc9772c7689ba47e2b19913670fad2d441",
      "guest_additions_mode": "attach",
      "ssh_password": "{{user `ssh_password`}}",
      "ssh_username": "{{user `ssh_user`}}",
      "type": "virtualbox-iso",
      "vm_name":"ubuntu-18.04-{{user `build`}}",
      "communicator": "ssh", 		
      "ssh_pty": "true"
    }
  ],
  "provisioners":[
    {
       "type": "shell",
       "execute_command": "echo '{{user `ssh_password`}}' | {{ .Vars }} sudo -E -S sh '{{ .Path }}'",
       "inline": [
          "echo '{{user `ssh_user`}}    ALL=(ALL)  NOPASSWD:ALL' >> /etc/sudoers"
       ]
    },
    {
       "type":"shell",
       "script":"setup/install-minimum-package.sh"
    },
    {
       "type":"shell",
       "script":"setup/install-guest-additions.sh"
    }
  ], 
  "post-processors": [
    [
      {
        "type": "vagrant",
        "keep_input_artifact": true,
        "provider_override": "virtualbox"
      }
    ]
  ]
}
